{
  "name": "beginnerinvestorhub-tools",
  "version": "1.0.0",
  "description": "Beginner Investor Hub - Investment tools and risk assessment platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/services/*",
    "tools/apps/*"
  ],
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @beginnerinvestorhub/web dev\" \"pnpm --filter @beginnerinvestorhub/backend-api dev\"",
    "build": "pnpm --filter \"@beginnerinvestorhub/*\" build",
    "start": "pnpm --filter \"@beginnerinvestorhub/*\" start",
    "lint": "pnpm --filter \"@beginnerinvestorhub/*\" lint",
    "lint:fix": "pnpm --filter \"@beginnerinvestorhub/*\" lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "pnpm --filter \"@beginnerinvestorhub/*\" type-check",
    "test": "pnpm --filter \"@beginnerinvestorhub/*\" test",
    "test:watch": "pnpm --filter \"@beginnerinvestorhub/*\" test:watch",
    "clean": "pnpm --filter \"@beginnerinvestorhub/*\" clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter @beginnerinvestorhub/backend-api dev",
    "backend:build": "pnpm --filter @beginnerinvestorhub/backend-api build",
    "backend:start": "pnpm --filter @beginnerinvestorhub/backend-api start",
    "services:market-data": "cd tools/services/market-data-ingestion && python src/main.py",
    "services:risk-engine": "cd tools/services/risk-calculation-engine && python src/api.py",
    "services:ai-nudge": "cd tools/services/ai-behavioral-nudge-engine && python src/api.py",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "install:all": "pnpm install",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.10",
    "jest": "^30.0.4",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/beginnerinvestorhub-tools.git"
  },
  "keywords": [
    "investment",
    "risk-assessment",
    "portfolio",
    "simulation",
    "fintech",
    "beginner-investing",
    "financial-tools"
  ],
  "author": "Kevin Ringler <beginnerinvestorhub@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/beginnerinvestorhub-tools/issues"
  },
  "homepage": "https://github.com/yourusername/beginnerinvestorhub-tools#readme",
  "dependencies": {
    "morgan": "^1.10.0"
  }
}
