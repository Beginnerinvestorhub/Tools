{
  "description": "Additional dependencies needed for OpenAPI/Swagger documentation",
  "dependencies": {
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@types/swagger-ui-express": "^4.1.6"
  },
  "scripts": {
    "docs:dev": "echo 'API Documentation available at http://localhost:4000/api/docs'",
    "docs:generate": "echo 'OpenAPI spec available at http://localhost:4000/api/docs/openapi.json'",
    "docs:validate": "echo 'Use swagger-codegen or openapi-generator to validate spec'"
  },
  "installation_commands": [
    "npm install openapi-types@^12.1.3",
    "npm install --save-dev @types/swagger-ui-express@^4.1.6"
  ]
}
