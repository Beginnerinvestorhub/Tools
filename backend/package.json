    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "dependencies": {
    "axios": "1.10.0",
    "dotenv": "^16.4.5",
    "express": "5.1.0",
    "firebase-admin": "12.0.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "20.11.17",
    "@types/stripe": "^8.0.416",
    "@types/supertest": "^6.0.3",
    "cors": "2.8.5",
    "express-rate-limit": "^8.0.1",
    "jest": "^29.7.0",
    "stripe": "^18.3.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5"
