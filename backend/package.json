{
  "name": "backend",
  "version": "1.0.0",
  "description": "Node.js API backend for Investment Tools Hub (JWT, Firebase Auth, RBAC)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
